        </mj-section>

        <mj-section mj-class="footer-section">
            <mj-group width="45%" css-class="mobile-width-85-per">
                <mj-column width="50%" css-class="mobile-two-columns">
                    <mj-text mj-class="parag-font footer-font-color" align="center">
                        <a href="https://www.canva.com/" target="_blank" style="text-decoration: underline;">Visit canva.com</a>
                    </mj-text>
                </mj-column>
                <mj-column width="50%" css-class="mobile-two-columns">
                    <mj-text mj-class="parag-font footer-font-color" align="center">
                        <a style="text-decoration: underline;">Unsubscribe</a>
                    </mj-text>
                </mj-column>
                <mj-column width="100%">
                    <mj-text mj-class="parag-font footer-font-color" align="center">
