                    <mj-image src="./images/twitter.png" alt="Twitter" title="Twitter" width="24px" height="24px" href="https://twitter.com/intent/follow?source=followbutton&variant=1.0&screen_name=canva" target="_blank" border="0" />
                </mj-column>
                <mj-column width="25%" css-class="mobile-width-25-per">
                    <mj-image src="./images/pintrest.png" alt="Pinterest" title="Pinterest" width="24px" height="24px" href="https://www.pinterest.com/canva/" target="_blank" border="0" />
